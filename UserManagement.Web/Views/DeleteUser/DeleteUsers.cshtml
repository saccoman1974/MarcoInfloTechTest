@model UserManagement.Web.Models.Users.UserListViewModel

<h2>Delete Users</h2>
<div class="table-responsive">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Forename</th>
                <th>Surname</th>
                <th>Email</th>
                <th>Date Of Birth</th>
                <th>Account Active</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Items)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Forename</td>
                    <td>@item.Surname</td>
                    <td>@item.Email</td>
                    <td>@item.DateOfBirth.ToString("dd/MM/yyyy")</td>
                    <td>@(item.IsActive ? "Yes" : "No")</td>
                    <td>
                        <form asp-action="DeleteUserConfirmed" asp-controller="Users" asp-route-id="@item.Id" method="post" style="display:inline;">
                            <input type="hidden" name="returnToDeleteList" value="true" />
                            <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this user?');">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<a class="btn btn-default mt-3" asp-controller="Users" asp-action="List">Back to List</a>
